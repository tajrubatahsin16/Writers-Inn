@model WritersInn1.ViewModel.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title></title>
    <!-- Meta tag Keywords -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <script type="application/x-javascript">
         addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
        function hideURLbar(){ window.scrollTo(0,1); } </script>


    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/fonts/fonts.googleapis.com/css?family=Philosopher:400,400i,700,700i&amp;subset=cyrillic,cyrillic-ext,vietnamese" rel="stylesheet">"

</head>
<body>
    <div data-vide-bg="video/social2">
        <div class="center-container">
            <!--header-->
            <div class="header-w3l">
                <h1>Login As Writer</h1>
            </div>
            <!--//header-->
            <!--main-->
            <div class="main-content-agile">
                <div class="sub-main-w3">
                    @using (Html.BeginForm("Login", "Account"))
                    {
                        <div style="color:red;">@Html.ValidationSummary()</div>
                        <div class="row">

                            <div class="col-lg-12">@ViewBag.Message</div>
                        </div><br />

                        <div class="row">
                            <div class="col-lg-4" style="font-family:'Times New Roman', Times, serif; font-weight:bold; color: white; padding-right:20px; padding-top:5px; font-size:18px;">@Html.LabelFor(a => a.Email) </div>
                            <div class="col-lg-8" style="background-color: transparent;">@Html.TextBoxFor(a => a.Email, new { @class = "form-control" })</div>
                            <span class="icon1" style="padding-right:10px;"><i class="fa fa-user" aria-hidden="true"></i></span>
                        </div><br />

                        <div class="row">
                            <div class="col-lg-4" style="font-family: 'Times New Roman', Times, serif; font-weight: bold; color: white; font-size: 18px; padding-right: 18px; padding-top: 30px;">@Html.LabelFor(a => a.Password)</div>
                            <div class="col-lg-8" style="align-content:baseline;">@Html.TextBoxFor(a => a.Password, new { @class = "form-control", type = "Password" })</div>
                            <span class="icon2" style="padding-right:5px;"><i class="fa fa-unlock" aria-hidden="true"></i></span>
                        </div><br />

                        <div style="font-family:'Times New Roman', Times, serif; color:white; padding-top:10px; padding-right:80px;">
                            @Html.ActionLink("Don't have an Account? Create One!", "Register")
                        </div>
                        <input type="submit" value="Login">
                    }


                </div>
            </div>
            <!--//main-->
        </div>
    </div>
    <!-- js -->
    <script type="text/javascript" src="js/jquery-2.1.4.min.js"></script>
    <script src="js/jquery.vide.min.js"></script>
    <!-- //js -->

</body>
</html>



