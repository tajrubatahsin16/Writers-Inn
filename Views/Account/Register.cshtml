@model WritersInn1.ViewModel.Register
@{
    ViewBag.Title = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title></title>
    <!-- Meta tag Keywords -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <script type="application/x-javascript">
         addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
        function hideURLbar(){ window.scrollTo(0,1); } </script>


    <link href="~/Content/SignStyle.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/fonts/fonts.googleapis.com/css?family=Philosopher:400,400i,700,700i&amp;subset=cyrillic,cyrillic-ext,vietnamese" rel="stylesheet">"

</head>
<body>
    <div data-vide-bg="video/social2">
        <div class="center-container">
            <!--header-->
            <div class="header-w3l">
                <h1>Register As Writer</h1>
            </div>
            <!--//header-->
            <!--main-->
            <div class="main-content-agile">
                <div class="wthree-pro">

                </div>
                <div class="sub-main-w3">

                    <div>
                        @using (Html.BeginForm("SaveRegisterDetails", "Account"))
                        {
                            <div style="color:red;">@Html.ValidationSummary()</div>
                            <div class="row">
                                <!--Show details are saved successfully message-->
                                <div class="col-lg-12">@ViewBag.Message</div>
                            </div><br />
                            <div class="row">
                                <div class="col-lg-3" style="padding-top:5px;font-family:'Times New Roman'; font-weight:bold; color:white;">@Html.LabelFor(a => a.Name)</div>
                                <div class="col-lg-9">@Html.TextBoxFor(a => a.Name, new { @class = "form-control" })</div>
                                <span class="icon0" style="padding-top: 2px; padding-right: 8px;"><i class="fa fa-asterisk" aria-hidden="true"></i></span>
                            </div><br />
                            <div class="row">
                                <div class="col-lg-3" style="padding-top: 10px; font-family: 'Times New Roman'; font-weight: bold; color: white;">@Html.LabelFor(a => a.Email)</div>
                                <div class="col-lg-9">@Html.TextBoxFor(a => a.Email, new { @class = "form-control" })</div>
                                <span class="icon1" style="padding-right:8px;"><i class="fa fa-user" aria-hidden="true"></i></span>
                            </div><br />
                            <div class="row">
                                <div class="col-lg-3" style="padding-top: 40px; font-family: 'Times New Roman'; font-weight: bold; color: white; ">@Html.LabelFor(a => a.Password)</div>
                                <div class="col-lg-9">@Html.TextBoxFor(a => a.Password, new { @class = "form-control", type = "Password" })</div>
                                <span class="icon2" style="padding-right:8px;"><i class="fa fa-unlock" aria-hidden="true"></i></span>
                            </div><br />
                            <div class="row">
                                <div class="col-lg-3" style="padding-top: 10px; font-family: 'Times New Roman'; font-weight: bold; color: white;">@Html.LabelFor(a => a.Phone)</div>
                                <div class="col-lg-9">@Html.TextBoxFor(a => a.Phone, new { @class = "form-control" })</div>
                                <span class="icon3" style="padding-bottom:5px; padding-right:8px;"><i class="fa fa-phone" aria-hidden="true"></i></span>
                            </div><br />
                            <div style="font-family:'Times New Roman', Times, serif; font-weight:bold; color:white; font-size:18px; padding-top:10px; padding-right:200px;">
                                @Html.ActionLink("Click to Login", "Login")
                            </div>

                            <input type="submit" value="Register">
                        }

                    </div>
                </div>

            </div>
            <!--//main-->
        </div>
    </div>
    <!-- js -->
    <script type="text/javascript" src="js/jquery-2.1.4.min.js"></script>
    <script src="js/jquery.vide.min.js"></script>
    <!-- //js -->
</body>
</html>


