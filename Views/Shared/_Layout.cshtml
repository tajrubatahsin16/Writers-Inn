<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Writers Inn!</title>
    <link href="~/Content/MainStyle.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div>
         <nav class="navbar navbar-default navbar-fixed-top" style="background: #E6E6FA; ">
        <div class="container" style="background: #E6E6FA; ">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="#" class="navbar-brand">
                    <img class="logo-size" src="~/images/SDlogo.png" width="90" height="90" />
                </a>
                
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="@Url.Action("Index" , "Home")">
                            <i class="glyphicon glyphicon-home"></i>
                            Home
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("About" , "Home")">
                            <i class="glyphicon glyphicon-info-sign"></i>
                            About Us
                        </a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="@Url.Action("Contact" , "Home")">
                            <i class="glyphicon glyphicon-envelope"></i>
                            Contact Us
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("LoginOption" , "Home")">
                            <i class="glyphicon glyphicon-log-in"></i>
                            Login
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        </nav>
    </div>
    <div class="container">
        <div class="row">
            @RenderBody()
        </div>
    </div>
    <div class="container body-content">
        
        <hr />
        <footer>
            <div id="footer2" class="container-fluid">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 text-center">
                        <p style="color:whitesmoke; font-family:'Times New Roman', Times, serif; font-weight:400;">
                            &copy All Rights Reserved to <a class="footerlinks" href="#" target="_blank" style="font-family:'Times New Roman', Times, serif; font-weight:400;">Writers Inn!</a> 2022.
                        </p>
                    </div>
                </div>
            </div>
        </footer>
        <script src="~/Scripts/jquery-3.4.1.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
