@model WritersInn1.Models.CUSTOMER

@{
    ViewBag.Title = "CusRegister";
    Layout = null;
}
<html>
<head>
    <link href="~/Content/SignUp.css" rel="stylesheet" type="text/css" media="all">

</head>
<body>

    <div class="container">
        <div class="card">
            <div class="inner-box">
                <div class="card-front">
                    <h2> Welcome to Writers Inn!</h2>

                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.AntiForgeryToken()
                        if (ViewBag.Message != null)
                        {
                            <div style=" border: solid 1px green">
                                @ViewBag.Message
                            </div>
                        }

                        <div class="form-group">
                            @Html.LabelFor(model => model.Cus_Name, htmlAttributes: new { @class = "control-label col-md-2" })

                            @Html.EditorFor(model => model.Cus_Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Cus_Name, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Cus_Email, htmlAttributes: new { @class = "control-label col-md-2" })

                            @Html.EditorFor(model => model.Cus_Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Cus_Email, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Cus_Password, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.EditorFor(model => model.Cus_Password)
                            @Html.ValidationMessageFor(model => model.Cus_Password, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create Account" class="btn btn-default" />
                            </div>
                        </div>

                    }
                    <div>
                        <p>Already Have an Account?<a>@Html.ActionLink("Login", "CusLogin", "Customer")</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
