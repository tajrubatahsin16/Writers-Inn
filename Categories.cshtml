@model List<WritersInn1.Models.Tbl_category>
@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h2 style="font-family:'Times New Roman'; font-size: 35px; font:bolder;">Categories</h2>
<div class="container-fluid">
    <!-- Breadcrumbs-->
    
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr style="font-family:'Times New Roman'; font-size: 25px; font:bolder;">
                            <th>Sr. No.</th>
                            <th>Category Name</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody style="font-family:'Times New Roman'; font-size: 20px; font:bolder;">
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@item.CategoryId</td>
                                <td>@item.CategoryName</td>
                                <td>



                          @Html.ActionLink("Edit", "CategoryEdit", new { catId = item.CategoryId})

                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
