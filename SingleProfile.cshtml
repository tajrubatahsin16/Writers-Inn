@model WritersInn1.Models.getAllContent
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Writers Profile</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../../Content/WritersProfileC.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="contents">
        <div class="container">
            <div class="row mt-5">
                <div class="col-12 WritersProf">
                    <img src="@Model.WPhoto" width=150 height=150 alt="">
                    <div class="Wdetails ml-31">
                        <p class="Wname"> @Model.WName </p>
                        <p class="Wdes"> @Model.WBio</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="heading">
                <h2> I provide... </h2>
            </div>

            @using (Html.BeginForm())
            {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-3 menuall">
                
                <div class="Items">
                    <img src="@Model.Cimage">
                    <div class="allthings">
                        <p class="itemheading"> @Model.CName <p>
                        <p class="itemdes"> @Model.CSDesc</p>
                        <p class="itemdes"> @Model.CLDesc</p>
                        <p class="itemdes"> BDT @Model.CPrice</p>
                        <div class="add">
                            <p class="addalliconsp"></p>
                            <div class="addall">
                            <input type="number" placeholder="Enter qty" min="1" max="10" name="qty" />
                            </div>
                        </div>
                        <input type="submit" value="ADD TO CART" class=" button" />
                    </div>
                </div>
                
            </div>
            }
        </div>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
